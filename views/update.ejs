<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>更新项目</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }
        .container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
        }
        .form-group input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }
        .form-group button {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .form-group button:hover {
            background-color: #0056b3;
        }
        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid #ccc;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .readonly-label {
            display: block;
            padding: 8px 0;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>查看项目</h1>

        <!-- 查看项目表单 -->
        <form id="updateForm" action="/user/update" method="GET">
			<div class="form-group">
				<label for="searchBar">名称：</label>
				<input type="text" id="searchBar" name="searchBar" value="<%= searchBar %>" placeholder="请输入名称" required maxlength="50">
			</div>

			<div class="form-group">
				<button type="button" onclick="submitForm('GET')">搜索名称</button>
			</div>
			
            <!-- 查询结果 -->
            <h2>查询结果</h2>
            <table>
            	<thead>
                    <tr>
                        <th>名称</th>
                        <th>数量</th>
                        <th>单价</th>
                    </tr>
                </thead>
                <tbody>
              		<tr>
                        <td>
                            <span class="readonly-label"><%= name %></span>
                        </td>                           	
                        <td>
                            <input type="number" id="count" name="count" value="<%= count %>" required min="1" max="99999" maxlength="5">
                        </td>                            
                        <td>
                            <input type="number" id="singlePrice" name="singlePrice" value="<%= singlePrice %>" required min="0" max="9999999.99" step="0.01" maxlength="10">  
                        </td>
                    </tr>
                </tbody>
            </table>
			
            <!-- 提交更新按钮 -->
			<br>
			<div class="form-group">
				<button type="button" onclick="submitForm('POST')">提交数据</button>
			</div>
        </form>
        
    </div>

</body>

<script>
	function submitForm(method) {
		const form = document.getElementById('updateForm');

		if (method === 'GET') {
			form.action = '/user/update'; // 搜索操作的 URL
			form.method = 'GET'; // 确保搜索使用 GET 方法
		} else if (method === 'POST') {
			form.action = '/user/update?_method=PUT'; // 更新操作的 URL
			form.method = 'POST'; // 使用 POST 方法提交
			alert("项目已更新");
		}

		form.submit(); // 提交表单
	}
</script>

</html>
